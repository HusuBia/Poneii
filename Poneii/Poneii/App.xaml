<Application x:Class="Poneii.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Poneii"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor">#22427C</SolidColorBrush>
        <SolidColorBrush x:Key="GridBackgroundColor">#DF73FF</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor">#C71585</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#000000</SolidColorBrush>
        <SolidColorBrush x:Key="OverlayColor">#7F000000</SolidColorBrush>
        <FontFamily x:Key="MainFont">Assets/#Droid Sans Mono</FontFamily>
    </Application.Resources>
</Application>
